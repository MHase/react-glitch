{
  "compilerOptions": {
    "sourceMap": true,
    "module": "ES2015",
    "moduleResolution": "node",
    "outDir": "dist",
    "skipLibCheck": false,
    "declaration": true,
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "target": "es5",
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}